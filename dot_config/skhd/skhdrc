# balance size of windows
ctrl + shift + alt - 0 : yabai -m space --balance

# Focus space with mission-control index
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9

# move window to space X
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6
ctrl + shift - 7 : yabai -m window --space 7
ctrl + shift - 8 : yabai -m window --space 8
ctrl + shift - 9 : yabai -m window --space 9

# Rotate the window tree clock-wise (options: 90, 180, 270 degree)
ctrl + shift + alt - a : yabai -m space --rotate 90
ctrl + alt - a : yabai -m space --rotate 90

# Set layout of the space (options: bsp, float)
ctrl + shift + alt - g : yabai -m space --layout bsp
ctrl + shift + alt - f : yabai -m space --layout float

# focus window in direction of focused window (options: north, east, south, west)
ctrl + shift + alt - h : yabai -m window --focus west || yabai -m display --focus prev
ctrl + shift + alt - l : yabai -m window --focus east || yabai -m display --focus next
ctrl + shift + alt - k : yabai -m window --focus north
ctrl + shift + alt - j : yabai -m window --focus south

ctrl - left : yabai -m window --focus west || yabai -m display --focus prev
ctrl - right : yabai -m window --focus east || yabai -m display --focus next
ctrl - up : yabai -m window --focus north
ctrl - down : yabai -m window --focus south

# options: zoom-parent, zoom-fullscreen, native-fullscreen
ctrl + shift + alt - m : yabai -m window --toggle zoom-fullscreen

# toggle whether the focused window should be tiled (only on bsp spaces)
# yabai -m window --toggle float

# toggle vertical/ horizontal
# yabai -m window --toggle split

# Focus display focused before the current one (so you can alternate)
# ctrl + shift + alt - ? : yabai -m display --focus recent
# Focus previous display by arrangement index
# ctrl + shift + alt - ? : yabai -m display --focus prev
# Focus next display by arrangement index
# ctrl + shift + alt - ? : yabai -m display --focus next
