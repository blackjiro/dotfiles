{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker:*)",
      "Bash(mise:*)",
      "Bash(grep:*)",
      "Bash(git:*)",
      "Bash(terminal-notifier:*)",
      "Bash(find:*)"
    ],
    "deny": [],
    "env": {
      "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
    },
    "includeCoAuthoredBy": false
  },
  "hooks": {
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.request_summary // \"Task completed\"' | xargs -I {} terminal-notifier -title 'Claude Code' -message '{}' -sound default"
          }
        ]
      }
    ]
  }
}
